{
  "compilerOptions": {
    "target": "ES2022",                  // X
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // X
    "allowJs": true,                     // X
    "skipLibCheck": true,                // X
    "strict": true,                      // X
    "noEmit": true,                      // X
    "esModuleInterop": true,             // X
    "module": "ESNext",                  // X
    "moduleResolution": "Bundler",       // X
    "resolveJsonModule": true,           // X
    "isolatedModules": true,             // X

    "jsx": "react-jsx",                  // ðŸ”´ DEÄžÄ°ÅžTÄ° (Next zorunlu)

    "incremental": true,                 // X
    "baseUrl": ".",                      // X

    "paths": {
      "@/*": ["./app/*"],                // X
      "@/lib/*": ["./app/lib/*"]         // ðŸ”´ EKLENDÄ° (kritik)
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"], // X
  "exclude": ["node_modules"]             // X
}
